{
  "name": "@superdispatch/sdk",
  "version": "0.0.6",
  "private": false,
  "description": "Super Dispatch JavaScript SDK",
  "repository": "git@github.com:superdispatch/sdk.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "main": "src/index.ts",
  "scripts": {
    "build": "yarn pika build",
    "prebump": "yarn lint && yarn tsc && yarn build",
    "bump": "yarn pika publish --no-publish",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "version": "yarn build"
  },
  "prettier": "@superdispatch/prettier-config",
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
      "/pkg/",
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@pika/cli": "^0.2.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@superdispatch/babel-preset": "^0.1.61",
    "@superdispatch/eslint-plugin": "^0.1.65",
    "@superdispatch/js-tools": "^0.1.62",
    "@superdispatch/prettier-config": "^0.1.51",
    "@superdispatch/tsconfig": "^0.1.50",
    "@types/jest": "^26.0.5",
    "eslint": "^7.5.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.7"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*",
            "__testutils__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-bundle-types"
      ]
    ]
  }
}
